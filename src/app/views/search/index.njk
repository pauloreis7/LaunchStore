{% extends 'layout.njk' %}
{% import 'parts/section-products.njk' as section %}

{% block content %}

<section class="search-products container">

    <aside>
        
        <div class="aside-header">
              
            <h2>{{ terms.term }}</h2>
            <p>{{ terms.total }} encontrados</p>

        </div>

        <nav class="nav-categories">
            
            <h4>Categorias</h4>

            <ul>

                {% for category in categories %}

                    <li><a href="/products/search?search={{ terms.term }}&category={{ category.id }}">{{ category.name }}</a></li>

                {% endfor %}

            </ul>
        </nav>

    </aside>

    {{ section.products('', 'search', products) }}

</section>

{% endblock %}