{% extends 'layout.njk' %}
{% import 'parts/card.njk' as cards %}

{% block content %}

    {% call cards.userCard("Faça Login", "login container") %}

        <form action="/users/login" method="POST">

            <article class="fields">

                {% include 'session/fields.njk' %}

            </article>

            <button class="button" type="submit">Login</button>

            <div class="login-footer">

                <ul>

                    <li> <a href="/users/register">Faça seu cadastro</a> </li>
                    <li> <a href="/users/forgot-password">Esqueceu a senha ?</a> </li>

                </ul>

            </div>

        </form>

    {% endcall %}

{% endblock %}