{% extends 'layout.njk' %}
{% import 'parts/card.njk' as cards %}

{% block content %}

    {% call cards.userCard("Recuperação de senha", "forgot-password container") %}

        <form action="/users/forgot-password" method="POST">

            <article class="fields">

                <div class="item">

                    <div>Email para recuperar senha</div>

                    <div class="input">

                        <input type="email" name="email" value="{{ user.email }}" placeholder="@gmail.com" required
                            onblur= "Validate.apply(this, 'isEmail')"
                        />

                    </div>

                </div>

            </article>

            <button class="button" type="submit">Recuperar senha</button>

        </form>

    {% endcall %}

{% endblock %}