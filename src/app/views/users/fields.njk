<div class="item">

    <div>Nome</div>

    <div class="input">

        <input name="name" value="{{ user.name }}" placeholder="Seu nome completo" required />

    </div>

</div>

<div class="item">

    <div>Email</div>

    <div class="input">

        <input type="email" name="email" value="{{ user.email }}" placeholder="@gmail.com" required
            onblur= "Validate.apply(this, 'isEmail')"
        />

    </div>

</div>

<div class="item">

    <div>Senha</div>

    <div class="input">

        <input type="password" name="password" placeholder="Escolha um senha segura" required />

    </div>

</div>

{% if not user.id %}

    <div class="item">

        <div>Confirme sua senha</div>

        <div class="input">

            <input type="password" name="repeatPassword" placeholder="Repita a senha inserida" required />

        </div>

    </div>

{% endif %}

<div class="item">

    <div>CPF ou CNPJ</div>

    <div class="input">

        <input name="cpf_cnpj" value="{{ user.cpf_cnpj }}" placeholder="Coloque seu CPF ou CNPJ"
            onkeydown = "Mask.apply(this, 'formatCpfOrCnpj')"
            onblur = "Validate.apply(this, 'isCpfOrCnpj')"
            required
         />

    </div>

</div>

<div class="item">

    <div>CEP</div>

    <div class="input">

        <input name="cep" value="{{ user.cep }}" placeholder="99999-999"
            onkeydown = "Mask.apply(this, 'formatCep')"
            onblur = "Validate.apply(this, 'isCep')"
            required
        />

    </div>

</div>

<div class="item">

    <div>Endereço</div>

    <div class="input">

        <input name="address" value="{{ user.address }}" placeholder="Insira seu endereço completo" required />

    </div>

</div>